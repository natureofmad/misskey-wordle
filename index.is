                }
                label: '5æ–‡å­—ã®å˜èªã‚’å…¥åŠ›'
            })
            Ui:C:button({
                text: 'ãŸã—ã‹ã‚ã‚‹'
                primary: true
                onClick: @() {
                    sendTrial()
                }
            })
        ]
    })

    if (currentInputFeedback.join() == 'ccccc') {
        // æ­£è§£
        Ui:get('textModule').update({
            children: [
                Ui:C:mfm({
                    text: "<center>$[x2 $[fg.color=f00 **æ­£è§£ï¼**]]</center>"
                })
                Ui:C:postFormButton({
                    text: "æŠ•ç¨¿ã™ã‚‹"
                    primary: true
                    rounded: true
                    form: {
                        text: createShareText()
                    }
                })
            ]
        })
    } else if (trialOutcomes.len >= attemptLimit) {
        // æŒ‘æˆ¦é™åº¦è¶…é
        Ui:get('textModule').update({
